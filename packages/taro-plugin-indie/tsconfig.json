{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}
